<button
  class="{{if
      @isSelected
      'bg-blue-500 hover:bg-blue-700 focus:ring-blue-500 text-white shadow-sm'
      'bg-white hover:bg-gray-200 focus:ring-white text-black'
    }}
     rounded-md border border-transparent px-4 py-2 text-base font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 sm:ml-3 sm:w-auto sm:text-sm"
  ...attributes
  {{on 'click' (fn @update @label)}}
>
  {{@label}}
</button>