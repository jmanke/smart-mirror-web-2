<div class="text-black flex flex-col justify-between" ...attributes>
  <div class="flex flex-col">
    <label>
      Margin left
    </label>
    <Settings::Profile::InputMargin
      @margin={{@profile.margin}}
      @direction="left"
      @onChange={{this.handleMarginChange}}
    />
    <label>
      Margin top
    </label>
    <Settings::Profile::InputMargin
      @margin={{@profile.margin}}
      @direction="top"
      @onChange={{this.handleMarginChange}}
    />
    <label>
      Margin right
    </label>
    <Settings::Profile::InputMargin
      @margin={{@profile.margin}}
      @direction="right"
      @onChange={{this.handleMarginChange}}
    />
    <label>
      Margin bottom
    </label>
    <Settings::Profile::InputMargin
      @margin={{@profile.margin}}
      @direction="bottom"
      @onChange={{this.handleMarginChange}}
    />
    <label>
      Stock Symbol
    </label>
    <input
      class="border border-gray-500 pl-1"
      type="text"
      value={{@profile.stockSymbol}}
      required
      {{on 'change' (action this.handleStockSymbolChange value='target.value')}}
    />
    <div class="flex pt-2">
      <input
        class="border border-gray-500 pl-1"
        type="checkbox"
        value={{@profile.showStockWidget}}
        checked={{@profile.showStockWidget}}
        required
        {{on 'click' (action this.handleShowStockWidgetChange)}}
      />
      <label class="pl-2">
        Show Stock Widget
      </label>
    </div>
  </div>
</div>