<label>
  Stock Symbol
</label>
<input
  class="border border-gray-500 pl-1"
  type="text"
  value={{@stockWidget.stockSymbol}}
  required
  {{on 'change' (action this.handleStockSymbolChange value='target.value')}}
/>
<div class="flex pt-2">
  <input
    class="border border-gray-500 pl-1 self-center"
    type="checkbox"
    value={{@stockWidget.showStockWidget}}
    checked={{@stockWidget.showStockWidget}}
    required
    {{on 'click' (action this.handleShowStockWidgetChange)}}
  />
  <label class="pl-2">
    Show Stock Widget
  </label>
</div>